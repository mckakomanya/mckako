# OncoRAD Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# Provider: "anthropic" or "openai"
LLM_PROVIDER=anthropic

# API Keys (set the one for your chosen provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Specific model (leave empty for default)
# Anthropic default: claude-3-5-sonnet-20241022
# OpenAI default: gpt-4-turbo-preview
LLM_MODEL=

# =============================================================================
# API Server Configuration
# =============================================================================

API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# =============================================================================
# Vector Database Configuration
# =============================================================================

VECTOR_DB_PATH=./data/vector_db
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
USE_GPU=false

# =============================================================================
# Document Processing
# =============================================================================

DOCUMENTS_PATH=./data/documents
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# Query Engine
# =============================================================================

MAX_SEARCH_RESULTS=10
MIN_RELEVANCE_SCORE=0.3
VALIDATE_RESPONSES=true
DEFAULT_LANGUAGE=es

# =============================================================================
# Security (Optional)
# =============================================================================

# Set to true to require API key for all requests
REQUIRE_API_KEY=false

# Comma-separated list of allowed API keys
ALLOWED_API_KEYS=

# =============================================================================
# CORS (for iOS app)
# =============================================================================

# Comma-separated list of allowed origins, or * for all
CORS_ORIGINS=*
